<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="black" parent="Theme.DomotiqueAppAndroid">
        <item name="colorPrimary">@color/ColorBlackPrimary</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        //
        <item name="android:colorBackground">@color/ColoreBlackBackground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/bleu</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/bleu</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
